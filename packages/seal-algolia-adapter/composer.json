{
    "name": "cmsig/seal-algolia-adapter",
    "description": "An adapter to support algolia in cmsig/seal search abstraction.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "cmsig",
        "seal",
        "seal-adapter",
        "search-client",
        "algolia"
    ],
    "autoload": {
        "psr-4": {
            "CmsIg\\Seal\\Adapter\\Algolia\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CmsIg\\Seal\\Adapter\\Algolia\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Alexander Schranz",
            "email": "alexander@sulu.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "cmsig/seal": "^0.6",
        "algolia/algoliasearch-client-php": "^4.4",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "php-cs-fixer/shim": "^3.51",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.3",
        "rector/rector": "^1.0"
    },
    "replace": {
        "schranz-search/seal-algolia-adapter": "self.version"
    },
    "scripts": {
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit"
        ],
        "phpstan": "@php vendor/bin/phpstan analyze",
        "lint-rector": "@php vendor/bin/rector process --dry-run",
        "lint-php-cs": "@php vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "lint": [
            "@phpstan",
            "@lint-php-cs",
            "@lint-rector",
            "@lint-composer"
        ],
        "lint-composer": "@composer validate --strict",
        "rector": "@php vendor/bin/rector process",
        "php-cs-fix": "@php vendor/bin/php-cs-fixer fix",
        "fix": [
            "@rector",
            "@php-cs-fix"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "./../*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
